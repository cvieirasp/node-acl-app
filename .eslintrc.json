{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
              "endOfLine": "auto"
            }
        ],
        "import/no-extraneous-dependencies": [
            "error", {
               "devDependencies": true
            }
        ],
        "import/extensions": 0,
        "class-methods-use-this": "off"
    },
    "settings": {
        "import/resolver": {
            "node": {
            "extensions": [".js", ".ts"]
            }
        }
    }
}
